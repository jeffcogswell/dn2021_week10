@model ArtworksResponse
@{
    string base_url = Model.config.iiif_url;
    ViewData["Title"] = "ViewArt";
}

<h1>ViewArt</h1>

@foreach (ArtworkResponse art in Model.data)
{
	<div style="margin:1em; background-color:azure">
		@art.title<br />
		@art.artist_title<br />
		@art.date_display<br />
		<img src="@base_url/@art.image_id/full/200,/0/default.jpg" />
		<a href="/home/addfav?id=@art.id">Add Favorite</a>
	</div>
}
